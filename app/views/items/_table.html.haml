= osom_table_for @items, class: 'table table-striped table-condensed table-bordered', push: true, url: items_path, id: 'items-table', async: true do |t|

  = t.head do
    %th{order: 'name'} Name
    %th{order: 'desc'} Description
    %th{order: 'size'} Size

  = t.body do |item|
    %td= link_to item.name, item
    %td= item.description
    %td= item.size
